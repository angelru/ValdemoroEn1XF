<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ValdemoroEn1.Controls.LogoTitleView">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <Label Text="{Binding Title}" LineBreakMode="TailTruncation" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Start" />
            <Image Margin="0,0,16,0" Source="{Binding GoogleLogo}" WidthRequest="100" HorizontalOptions="EndAndExpand" />
        </StackLayout>
  </ContentView.Content>
</ContentView>